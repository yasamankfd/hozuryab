<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_attendee_to_class"
    android:background="@drawable/round_background">

    <Button
        android:id="@+id/add_to_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_to_class"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attendee_id_to_add_to_class" />

    <EditText
        android:id="@+id/attendee_id_to_add_to_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/attendee_id"
        app:layout_constraintBottom_toTopOf="@+id/add_to_class"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:background="@drawable/round_textview"/>
</androidx.constraintlayout.widget.ConstraintLayout>