<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/round_background">

    <TextView
        android:id="@+id/attendee_name_in_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="10dp"
        android:text="attendee name"
        android:layout_gravity="center"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/attendee_id_in_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/round_textview"/>

    <TextView
        android:id="@+id/attendee_id_in_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:text="attendee id"
        android:layout_gravity="center"
        android:background="@drawable/round_textview"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/attendee_name_in_list"
        app:layout_constraintTop_toBottomOf="@+id/attendee_name_in_list" />


</androidx.constraintlayout.widget.ConstraintLayout>