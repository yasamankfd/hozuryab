<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view_class"
    android:background="@drawable/round_background">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="@string/class_id"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:background="@drawable/round_textview"/>

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/class_id_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:background="@drawable/round_textview"/>

            </LinearLayout>

            <TextView
                android:layout_width="185dp"
                android:layout_height="5dp"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal"
                android:textSize="17sp">


                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="@string/class_title"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:background="@drawable/round_textview"/>

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/class_title_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="17sp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:gravity="center"
                    android:background="@drawable/round_textview"/>

            </LinearLayout>

            <TextView
                android:layout_width="185dp"
                android:layout_height="5dp"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="@string/place"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:background="@drawable/round_textview"/>


                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/class_place_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="17sp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:gravity="center"
                    android:background="@drawable/round_textview"/>
            </LinearLayout>

            <TextView
                android:layout_width="185dp"
                android:layout_height="5dp"
                android:textSize="17sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hour"
                android:gravity="center"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/class_stime_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:background="@drawable/round_textview"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="@string/to"
                    android:gravity="center"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/class_etime_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:background="@drawable/round_textview"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:gravity="center"
                android:textSize="17sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/class_sdate_info"
                    android:layout_width="wrap_content
"
                    android:layout_height="match_parent"
                    android:textSize="17sp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:gravity="center"
                    android:background="@drawable/round_textview"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="@string/to"
                    android:gravity="center"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/class_edate_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:background="@drawable/round_textview"/>

            </LinearLayout>

            <TextView
                android:layout_width="185dp"
                android:layout_height="1dp"
                android:textSize="17sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:gravity="center"
        android:orientation="horizontal">

            <Button
                android:id="@+id/new_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:text="@string/newSession"
                android:background="@drawable/round_textview"/>

            <TextView
                android:layout_width="13dp"
                android:layout_height="3dp"
                android:textSize="17sp" />

            <Button
                android:id="@+id/attendees_list"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="wrap_content"
                android:text="@string/attendeeList"
                android:background="@drawable/round_textview"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/addController"
            android:background="@drawable/round_textview"/>

            <TextView
                android:layout_width="13dp"
                android:layout_height="3dp"
                android:textSize="17sp" />

            <Button
                android:id="@+id/add_attendees"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="wrap_content"
                android:text="@string/addAttendee"
                android:background="@drawable/round_textview"/>
    </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_textview"
                android:text="@string/sessions_list"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textSize="17sp" />

            <GridView
                android:id="@+id/sessions_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:background="@drawable/round_textview"/>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>