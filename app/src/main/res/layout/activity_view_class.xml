<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view_class">

    <ScrollView
        android:layout_width="407dp"
        android:layout_height="727dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:textSize="17sp"
                    android:text="@string/class_id"/>

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/class_id_info"
                    android:layout_width="320dp"
                    android:layout_height="50dp"/>

            </LinearLayout>
            <TextView
                android:layout_width="185dp"
                android:layout_height="5dp"
                android:textSize="17sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:textSize="17sp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="17sp"
                    android:text="@string/class_title"/>
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/class_title_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="17sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="185dp"
                android:layout_height="5dp"
                android:textSize="17sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="17sp"
                    android:text="@string/place"/>


                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/class_place_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="17sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="185dp"
                android:layout_height="5dp"
                android:textSize="17sp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="@string/hour"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textSize="17sp">

                <TextView
                    android:id="@+id/class_stime_info"
                    android:layout_width="185dp"
                    android:layout_height="40dp"
                    android:textSize="17sp"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:text="@string/to"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/class_etime_info"
                    android:layout_width="185dp"
                    android:layout_height="40dp"
                    android:textSize="17sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="@string/date"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/class_sdate_info"
                    android:layout_width="185dp"
                    android:layout_height="40dp"
                    android:textSize="17sp"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:text="@string/to"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/class_edate_info"
                    android:layout_width="185dp"
                    android:layout_height="40dp"
                    android:textSize="17sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="185dp"
                android:layout_height="1dp"
                android:textSize="17sp"/>
            <Button
                android:id="@+id/new_session"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/newSession" />
            <TextView
                android:layout_width="185dp"
                android:layout_height="1dp"
                android:textSize="17sp"/>
            <Button
                android:id="@+id/attendees_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/attendeeList" />
            <TextView
                android:layout_width="185dp"
                android:layout_height="1dp"
                android:textSize="17sp"/>
            <Button
                android:id="@+id/add_attendees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/addAttendee" />
            <GridView
                android:id="@+id/sessions_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>